{
  "expo": {
    "name": "ApexBox Companion",
    "slug": "apexbox-companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "apexbox",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.apexbox.companion",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "ApexBox tracks your location during performance sessions to create track replays",
        "NSBluetoothAlwaysUsageDescription": "ApexBox uses Bluetooth to connect to your performance tracker device",
        "NSCameraUsageDescription": "ApexBox needs camera access to take profile pictures",
        "NSPhotoLibraryUsageDescription": "ApexBox needs photo access to set your profile picture"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "package": "com.apexbox.companion",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "react-native-reanimated/plugin",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
